// layout values
tvWidth = 200px
tvHeight = tvWidth * 0.725
tvBGWidth = tvWidth
tvBGHeight = tvBGWidth * 0.575
tvMargin = 15px

// mix-ins
transform(t)
  -webkit-transform t
  -moz-transform t
  -ms-transform t
  -o-transform t
  transform t

user-select(t)
  -webkit-user-select t
  -moz-user-select t
  -ms-user-select t
  -o-user-select t
  user-select t


/* Elements */

body
  margin 0 auto
  font-family Helvetica Neue, Helvetica, Verdana, sans-serif
  background-color #000
  color #FFF

div
  position relative
  height auto
  z-index 10

/* GENERAL UI */

.hotspot
  cursor pointer

.alertScreen
  display none

.button1, .button2
  width 180px

.noselect
  user-select(none)

/* BACKGROUNDS */

.original1
  background-image url(../img/background_original1.jpg)
  background-repeat no-repeat
  background-attachment fixed
  background-size cover
  background-position center bottom

/* GENERAL LAYOUT */

.screen
  width 90%
  margin 0 auto

.overlay
  position fixed
  z-index 10000
  margin-top 100px
  margin-left 50%
  left -250px
  height auto
  width 500px

.lightPad
  padding 5px

.heavyPad
  padding 25px

.lightMargin
  padding 5px

/* SCREENS */

.screen
  display none

.title
  width 70%
  margin 40px auto

.subtitleText
  height 50px
  margin 10px auto 10px auto

/* TYPOGRAPHY */

p
  user-select(none)

.copy1
  width 70%
  margin 5px auto 5px auto
  line-height 1.6em
  text-align justify

.header2
  width 70%
  margin 5px auto 5px auto
  line-height 1.6em
  text-align justify
  font-size 16px

.regularFont
  font-size 14px

.smallFont
  font-size 12px

.centerText
  text-align center

/* QUIZ */

p.questionText
  font-size 22px

.questionAnswers .triviaButton
  display inline-block
  width 136px
  height 60px
  margin 3px
  line-height 56px
  text-align center
  font-size 16px
  font-weight lighter

.questionAnswers .default
  background url(../img/button_trivia.svg) top left no-repeat

.questionAnswers .correct
  background url(../img/button_trivia_correct.svg) top left no-repeat

.questionAnswers .incorrect
  background url(../img/button_trivia_incorrect.svg) top left no-repeat

/* GENERAL COLORS */

.ltBlue
  color lightskyblue

/* GAME */

#instructions
  width 500px
  height 200px
  margin auto

#instructions .prev, #instructions .next
  width 30px
  height 30px

#instructions .item
  height 200px

#tvWrapper
  margin 0 auto
  width tvWidth*4 + tvMargin*8

.tv
  width tvWidth
  height tvHeight
  float left
  margin tvMargin tvMargin tvMargin tvMargin

.tv .tvScreen
  background-size tvBGWidth tvBGHeight
  background-repeat no-repeat

.tv .tvScreen .timer
  position relative
  top -55px
  height 5px
  background-color #008000
  margin 0 auto 0 auto

.tv .tvScreen .alert, .tv .tvScreen .bonus
  position absolute
  width tvWidth*.75
  top 40px
  margin-left 50%
  left -((tvWidth*.75)/2)

.tv .tvScreen .alert .animate, .tv .tvScreen .bonus .animate
  width 75px
  margin 0 auto

.tv .broken1
  transform(rotate(3deg))

.tv .broken2
  transform(rotate(-1deg))

.tv .broken3
  transform(rotate(2deg))

.tv .broken4
  transform(rotate(-4deg))